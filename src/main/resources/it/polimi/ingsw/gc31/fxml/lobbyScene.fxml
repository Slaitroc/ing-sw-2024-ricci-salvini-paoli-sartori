                    <StackPane>
                        <MFXTextField styleClass="player-text-field" text="Player3"/>
                    </StackPane>
                    <StackPane>
                        <ImageView fitHeight="100" fitWidth="100">
                            <Image url="@../Images/Board/CODEX_pion_rouge.png"/>
                        </ImageView>
                    </StackPane>
                    <StackPane>
                        <Button styleClass="rounded-button, small-button" text="Ready">
                        </Button>
                    </StackPane>
                </VBox>
            </StackPane>

            <!-- StackPane for WAITING_PLAYER  -->
            <StackPane fx:id="waitingPlayer3" stylesheets="@../css/stileFxml.css" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="135" maxHeight="360" minWidth="135" minHeight="360" >
                <VBox spacing="40" alignment="BOTTOM_CENTER">
                    <ImageView fitHeight="80" fitWidth="80">
                        <Image url="@../Images/AppIcons/waiting_player.gif"/>
                    </ImageView>
                    <TextArea styleClass="player-text-field" wrapText="true" maxHeight="60" minHeight="60" editable="false" mouseTransparent="true">
                        Waiting for
                        Player
                    </TextArea>
                </VBox>
            </StackPane>

            <!-- StackPane for LOCKED_PLAYER_SLOT  -->
            <StackPane fx:id="lockPlayer3" styleClass="stackPane-playerSlot, lockedPlayerSlot">
                <ImageView fitHeight="80" fitWidth="80">
                    <Image url="@../Images/AppIcons/LockIcon.png"/>
                </ImageView>
            </StackPane>
        </StackPane>

        <!-- StackPane for GENERAL_PLAYER -->
        <StackPane stylesheets="@../css/stileFxml.css"
                   maxWidth="135" maxHeight="360" minWidth="135" minHeight="360">

            <!-- StackPane for PLAYER_IN_LOBBY  -->
