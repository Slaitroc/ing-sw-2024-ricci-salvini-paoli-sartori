<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.gc31.view.gui.controllers.LobbyController"
           stylesheets="@../css/stileFxml.css" styleClass="stackPane-default">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <HBox spacing="50" alignment="CENTER">

        <!-- StackPane for GENERAL_PLAYER -->
        <!-- StackPane for PLAYER_IN_LOBBY  -->
        <StackPane stylesheets="@../css/stileFxml.css" styleClass="stackPane-playerSlot, player1"
                   maxWidth="135" maxHeight="360" minWidth="135" minHeight="360">
            <VBox spacing="70">
                <padding>
                    <Insets top="20" right="10" bottom="20" left="10"/>
                </padding>
                <StackPane>
                    <MFXTextField fx:id="mainPlayer" styleClass="player-text-field"/>
                </StackPane>
                <StackPane>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@../Images/Board/CODEX_pion_vert.png"/>
                    </ImageView>
                </StackPane>
                <StackPane>
                    <Button styleClass="rounded-button, small-button" text="Ready">
                    </Button>
                </StackPane>
            </VBox>
        </StackPane>

        <!-- StackPane for GENERAL_PLAYER -->
        <StackPane stylesheets="@../css/stileFxml.css" styleClass="stackPane-playerSlot"
                   maxWidth="135" maxHeight="360" minWidth="135" minHeight="360">

            <!-- StackPane for PLAYER_IN_LOBBY  -->
            <StackPane fx:id="inGamePlayer2" styleClass="stackPane-playerSlot, player3">
                <VBox spacing="70">
                    <padding>
                        <Insets top="20" right="10" bottom="20" left="10"/>
                    </padding>
                    <StackPane>
                        <MFXTextField styleClass="player-text-field" text="Player2"/>
                    </StackPane>
                    <StackPane>
                        <ImageView fitHeight="100" fitWidth="100">
                            <Image url="@../Images/Board/CODEX_pion_jaune.png"/>
                        </ImageView>
                    </StackPane>
                    <StackPane>
                        <Button styleClass="rounded-button, small-button" text="Ready">
                        </Button>
                    </StackPane>
                </VBox>
            </StackPane >

            <!-- StackPane for WAITING_PLAYER  -->
            <StackPane fx:id="waitingPlayer2" stylesheets="@../css/stileFxml.css" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="135" maxHeight="360" minWidth="135" minHeight="360">
                <VBox spacing="40" alignment="BOTTOM_CENTER">
                    <ImageView fitHeight="80" fitWidth="80">
                        <Image url="@../Images/AppIcons/waiting_player.gif"/>
                    </ImageView>
                    <TextArea styleClass="player-text-field" wrapText="true" maxHeight="60" minHeight="60" editable="false" mouseTransparent="true">
                        Waiting for
                        Player
                    </TextArea>
                </VBox>
            </StackPane>
        </StackPane>

        <!-- StackPane for GENERAL_PLAYER -->
        <StackPane stylesheets="@../css/stileFxml.css" styleClass="stackPane-playerSlot"
                   maxWidth="135" maxHeight="360" minWidth="135" minHeight="360">

            <!-- StackPane for PLAYER_IN_LOBBY  -->
            <StackPane fx:id="inGamePlayer3" styleClass="stackPane-playerSlot, player3">
