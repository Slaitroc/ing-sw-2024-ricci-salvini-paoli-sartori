            </StackPane>

            <!-- StackPane for WAITING_PLAYER  -->
            <StackPane fx:id="waitingPlayer4" stylesheets="@../css/stileFxml.css" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="135" maxHeight="360" minWidth="135" minHeight="360">
                <VBox spacing="40" alignment="BOTTOM_CENTER">
                    <ImageView fitHeight="80" fitWidth="80">
                        <Image url="@../Images/AppIcons/waiting_player.gif"/>
