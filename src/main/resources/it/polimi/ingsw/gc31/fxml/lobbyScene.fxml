<?xml version="1.0" encoding="UTF-8"?>


<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.gc31.view.gui.controllers.LobbyController"
           stylesheets="@../css/Commons.css, @../css/PlayerNames.css, @../css/Panes.css, @../css/Buttons.css"
           styleClass="stackPane-default">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>
<VBox alignment="CENTER" spacing="5">
    <ImageView fitWidth="800" fitHeight="160">
        <Image url="@../Images/Misc/border2.jpg"/>
    </ImageView>
    <GridPane alignment="CENTER" hgap="50">

        <ImageView fx:id="iconPlayer1" GridPane.rowIndex="0" GridPane.columnIndex="0" fitHeight="100" fitWidth="100"
                   visible="false" GridPane.halignment="CENTER">
            <Image url="@../Images/AppIcons/iconPlant.png"/>
        </ImageView>

        <ImageView fx:id="iconPlayer2" GridPane.rowIndex="0" GridPane.columnIndex="1" fitHeight="100" fitWidth="100"
                   visible="false" GridPane.halignment="CENTER">
            <Image url="@../Images/AppIcons/iconInsect.png"/>
        </ImageView>

        <ImageView fx:id="iconPlayer3" GridPane.rowIndex="0" GridPane.columnIndex="2" fitHeight="100" fitWidth="100"
                   visible="false" GridPane.halignment="CENTER">
            <Image url="@../Images/AppIcons/iconMushroom.png"/>
        </ImageView>

        <ImageView fx:id="iconPlayer4" GridPane.rowIndex="0" GridPane.columnIndex="3" fitHeight="100" fitWidth="100"
                   visible="false" GridPane.halignment="CENTER">
            <Image url="@../Images/AppIcons/iconAnimal.png"/>
        </ImageView>


        <!-- StackPane for GENERAL_PLAYER1 -->
        <!-- StackPane for PLAYER1_IN_LOBBY  -->
        <StackPane stylesheets="@../css/Commons.css" styleClass="stackPane-playerSlot, player1"
                   maxWidth="200" maxHeight="360" minWidth="200" minHeight="360"
                   GridPane.rowIndex="1" GridPane.columnIndex="0">
            <VBox spacing="70" alignment="CENTER">
                <padding>
                    <Insets top="20" right="10" bottom="20" left="10"/>
                </padding>
                <MFXTextField fx:id="namePlayer1" stylesheets="@../css/PlayerNames.css"
                              styleClass="player-text-field" alignment="CENTER" prefWidth="150"/>
                <ImageView fitHeight="100" fitWidth="100">
                    <Image url="@../Images/Board/CODEX_pion_vert.png"/>
                </ImageView>
                <TextField fx:id="ready1" stylesheets="@../css/Labels.css" styleClass="ready-label"
                           text="Not Ready" alignment="CENTER"
                           editable="false" mouseTransparent="true">
                </TextField>
            </VBox>
        </StackPane>

        <!-- StackPane for GENERAL_PLAYER2 -->
        <StackPane styleClass="stackPane-playerSlot"
                   maxWidth="200" maxHeight="360" minWidth="200" minHeight="360"
                   GridPane.rowIndex="1" GridPane.columnIndex="1">

            <!-- StackPane for PLAYER2_IN_LOBBY  -->
            <StackPane fx:id="inGamePlayer2" styleClass="stackPane-playerSlot, player2"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <VBox spacing="70" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="10" bottom="20" left="10"/>
                    </padding>
                    <MFXTextField fx:id="namePlayer2" stylesheets="@../css/PlayerNames.css"
                                  styleClass="player-text-field" alignment="CENTER" prefWidth="150"/>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@../Images/Board/CODEX_pion_jaune.png"/>
                    </ImageView>
                    <TextField fx:id="ready2" stylesheets="@../css/Labels.css" styleClass="ready-label"
                               text="Not Ready" alignment="CENTER"
                               editable="false" mouseTransparent="true">
                    </TextField>
                </VBox>
            </StackPane>

            <!-- StackPane for WAITING_PLAYER2  -->
            <StackPane fx:id="waitingPlayer2" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <ImageView fitHeight="100" fitWidth="100">
                    <Image url="@../Images/AppIcons/waiting_player.gif"/>
                </ImageView>
            </StackPane>
        </StackPane>

        <!-- StackPane for GENERAL_PLAYER3 -->
        <StackPane styleClass="stackPane-playerSlot"
                   maxWidth="200" maxHeight="360" minWidth="200" minHeight="360"
                   GridPane.rowIndex="1" GridPane.columnIndex="2">

            <!-- StackPane for PLAYER3_IN_LOBBY  -->
            <StackPane fx:id="inGamePlayer3" styleClass="stackPane-playerSlot, player3"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <VBox spacing="70" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="10" bottom="20" left="10"/>
                    </padding>
                    <MFXTextField fx:id="namePlayer3" stylesheets="@../css/PlayerNames.css"
                                  styleClass="player-text-field" alignment="CENTER" prefWidth="150"/>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@../Images/Board/CODEX_pion_rouge.png"/>
                    </ImageView>
                    <TextField fx:id="ready3" stylesheets="@../css/Labels.css" styleClass="ready-label"
                               text="Not Ready" alignment="CENTER"
                               editable="false" mouseTransparent="true">
                    </TextField>
                </VBox>
            </StackPane>

            <!-- StackPane for WAITING_PLAYER3  -->
            <StackPane fx:id="waitingPlayer3" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <ImageView fitHeight="100" fitWidth="100">
                    <Image url="@../Images/AppIcons/waiting_player.gif"/>
                </ImageView>
            </StackPane>

            <!-- StackPane for LOCKED_PLAYER3_SLOT  -->
            <StackPane fx:id="lockPlayer3" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <ImageView fitHeight="120" fitWidth="120">
                    <Image url="@../Images/AppIcons/iconLock.png"/>
                </ImageView>
            </StackPane>
        </StackPane>

        <!-- StackPane for GENERAL_PLAYER4 -->
        <StackPane
                maxWidth="200" maxHeight="360" minWidth="200" minHeight="360"
                GridPane.rowIndex="1" GridPane.columnIndex="3">

            <!-- StackPane for PLAYER4_IN_LOBBY  -->
            <StackPane fx:id="inGamePlayer4" styleClass="stackPane-playerSlot, player4"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <VBox spacing="70" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="10" bottom="20" left="10"/>
                    </padding>
                    <MFXTextField fx:id="namePlayer4" stylesheets="@../css/PlayerNames.css"
                                  styleClass="player-text-field" alignment="CENTER" prefWidth="150"/>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@../Images/Board/CODEX_pion_bleu.png"/>
                    </ImageView>
                    <TextField fx:id="ready4" stylesheets="@../css/Labels.css" styleClass="ready-label"
                               text="Not Ready" alignment="CENTER"
                               editable="false" mouseTransparent="true">
                    </TextField>
                </VBox>
            </StackPane>

            <!-- StackPane for WAITING_PLAYER4  -->
            <StackPane fx:id="waitingPlayer4" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <ImageView fitHeight="100" fitWidth="100">
                    <Image url="@../Images/AppIcons/waiting_player.gif"/>
                </ImageView>
            </StackPane>

            <!-- StackPane for LOCKED_PLAYER4_SLOT  -->
            <StackPane fx:id="lockPlayer4" styleClass="stackPane-playerSlot, lockedPlayerSlot"
                       maxWidth="200" maxHeight="360" minWidth="200" minHeight="360">
                <ImageView fitHeight="120" fitWidth="120">
                    <Image url="@../Images/AppIcons/iconLock.png"/>
                </ImageView>
            </StackPane>
        </StackPane>

        <!-- StackPane for GENERAL CHAT and READY BUTTON -->
        <StackPane maxWidth="200" maxHeight="360" minWidth="200" minHeight="360"
                   GridPane.rowIndex="1" GridPane.columnIndex="4">
            <VBox spacing="10" alignment="TOP_CENTER" prefHeight="360" maxHeight="360">
                <ScrollPane fx:id="scrollPane" maxWidth="200" maxHeight="250" minWidth="200" minHeight="250"
                            fitToWidth="true" fitToHeight="true" stylesheets="@../css/Chat.css"
                            styleClass="chat-scroll-pane">
                    <padding>
                        <Insets top="10" right="5" bottom="10" left="5"/>
                    </padding>
                    <TextFlow fx:id="chatField" styleClass="lobby-chat-background">
                    </TextFlow>
                </ScrollPane>
                <MFXTextField fx:id="textField" maxWidth="200" maxHeight="40" minWidth="200" minHeight="40"
                              onKeyPressed="#handleEnterKeyPressed"
                              stylesheets="@../css/SimpleTextField.css" styleClass="mfx-simple-small-text-field">
                </MFXTextField>
                <MFXButton stylesheets="@../css/Buttons.css" styleClass="really-small-button, rounded-button"
                           maxWidth="170" maxHeight="40" minWidth="170" minHeight="40"
                           onAction="#setReady" text="Set Ready">
                </MFXButton>
            </VBox>
        </StackPane>
        <Label fx:id="gameIDLabel" GridPane.rowIndex="0" GridPane.columnIndex="4"
               stylesheets="@../css/Labels.css" styleClass="text-label">
        </Label>
    </GridPane>
</VBox>
</StackPane>