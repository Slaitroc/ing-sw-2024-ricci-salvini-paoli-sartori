                    </TextArea>
                </VBox>
            </StackPane>

            <!-- StackPane for LOCKED_PLAYER_SLOT  -->
            <StackPane fx:id="lockPlayer4" styleClass="stackPane-playerSlot, lockedPlayerSlot">
                <ImageView fitHeight="80" fitWidth="80">
                    <Image url="@../Images/AppIcons/LockIcon.png"/>
                </ImageView>
            </StackPane>
        </StackPane>
    </HBox>

</StackPane>