<StackPane xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="it.polimi.ingsw.gc31.view.GUI.controllers.UsernameController"
    stylesheets="@stilefxml.css" styleClass="stackpane-black">
    <children>
        <VBox fillWidth="true" alignment="CENTER" spacing="20" styleClass="vbox">
            <children>
                <MFXButton layoutX="188.0" layoutY="349.0" text="GoToStartScene"
